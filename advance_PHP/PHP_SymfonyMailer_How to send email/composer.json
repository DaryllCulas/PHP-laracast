{
    "name": "your-namespace/php_unit_testing",
    "description": "Tutorial",
    "require": {
        "vlucas/phpdotenv": "^5.6",
        "psr/container": "^2.0",
        "symfony/mailer": "^7.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.2"
    },
  "autoload": {
    "psr-4": {
        "App\\": "app/",
        "App\\Controllers\\": "app/controllers/",
        "App\\Models\\": "app/models/",
        "App\\Views\\": "app/views/",
        "App\\Exceptions\\": "app/Exceptions/"
       
    }
},
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        },
        "files": [
            "app/controllers/Attributes/Route.php"
          ]
    },
    "config": {
        "optimize-autoloader": true
    }
  
}
